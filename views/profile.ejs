<%- include("./partials/head", {title: "Registro - PC Gamer"}) %>

<body>
  <%- include("./partials/header") %>
  <main class="main-register">
    <h1>Pagina de perfil</h1>
    <form class="form-register" action="/" method="POST" enctype="multipart/form-data">
      <h3 class="titulo-register">Registrate</h3>
      <div class="contenedores-register">
          <label for="nombre"></label>
          <input class="input-register1" type="text" name="name" id="name" placeholder="Nombre y Apellido" value="<%= user.name %>" disabled>
          <button>Editar</button>
          <% if(errors && errors.name) {%>
          <span class="feedback-crearUsuario"><%= errors.name.msg%></span>
          <% } %>
      </div>
      <div class="contenedores-register">
          <label for="email-register"></label>
          <input class="input-register1" type="text" name="email" id="email" placeholder="Example@hotmail.com" value="<%= user.email %>" disabled>
          <% if(errors && errors.email) {%>
          <span class="feedback-crearUsuario"><%= errors.email.msg%></span>
          <% } %>
      </div>
      <div class="contenedores-register">
          <label for="contrase単a-register"></label>
          <input class="input-register1" type="password" name="password" id="password" placeholder="Contrase単a">
          <% if(errors && errors.password) {%>
          <span class="feedback-crearUsuario"><%= errors.password.msg%></span>
          <% } %>
      </div>
      <div class="contenedores-register">
          <label for="confirmar-contrase単a"></label>
          <input class="input-register1" type="password" name="repassword" id="repassword"
              placeholder="Confirmar contrase単a">
          <% if(errors && errors.repassword) {%>
          <span class="feedback-crearUsuario"><%= errors.repassword.msg%></span>
          <% } %>
      </div>
      <div>
          <label class="d-block mx-auto mb-3" for="avatar"><span>
                  Foto de
                  Perfil
              </span>
              <img class="d-block mx-auto border rounded" style="width: 200px; height: 200px;" src="/img/profiles-img/<%= user.profileImage %>" alt=""
                  id="avatarImg">
          </label>
          <input class="d-none" type="file" name="profileImage" accept="image/png,image/jpg" id="avatar" />
          <% if(errors && errors.profileImage) {%>
          <span class="feedback-crearUsuario"><%= errors.profileImage.msg%></span>
          <% } %>
      </div>
      <div class="contenedores-register">
          <button class="boton-register" type="submit">Registrarse</button>
      </div>
    </form>
  </main>
  <%- include("./partials/footer") %>
  <script src="/scripts/editProfile.js"></script>
</body>

</html>